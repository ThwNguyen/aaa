@model IEnumerable<ontap.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (@Html.BeginForm()) {
    <p>
        <input name="searchName" value="gia" type="radio"/> Giá
        <input name="searchName" value="ten" type="radio"/> Tên
        <br />
        @Html.TextBox("searchKey")
        <input type="submit" value="Tìm"/>
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Categoryid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProdName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MetaTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Categoryid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProdName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetaTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @{
                    string imgPath = "~/Image/" + item.ImagePath;
                }
                <img src="@Url.Content(imgPath)" width="100" class="img-thumbnail" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Pid }) |
                @Html.ActionLink("Details", "Details", new { id = item.Pid }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Pid })
            </td>
        </tr>
    }

</table>
